{
  "name": "seeksy",
  "type": "module",
  "version": "1.1.0",
  "description": "A fast, invokable desktop search for files, folders and applications",
  "author": {
    "name": "Andreas Hagen",
    "url": "https://github.com/andreasjhagen"
  },
  "homepage": "https://github.com/andreasjhagen/seeksy",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:watch": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps && npm rebuild sharp",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@headlessui/vue": "^1.7.23",
    "@tailwindcss/vite": "^4.1.3",
    "@vueuse/core": "^13.0.0",
    "better-sqlite3": "^11.9.1",
    "chokidar": "^4.0.3",
    "electron-store": "^10.0.1",
    "emojilib": "^4.0.1",
    "ini": "^5.0.0",
    "material-symbols": "^0.29.2",
    "pinia": "^3.0.1",
    "sharp": "^0.33.5",
    "sharp-phash": "^2.2.0",
    "vdf-parser": "^1.2.1",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@rushstack/eslint-patch": "^1.11.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "electron": "^35.1.1",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-vue": "^10.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.3",
    "vite": "^6.2.3",
    "vue": "^3.5.13"
  }
}
